<body>
  <h2>🔍 استعلام النتيجة</h2>

  <input type="text" id="number" placeholder="رقم الاكتتاب">
  <select id="branch">
    <option value="">اختر الفرع</option>
    <option value="أدبي">أدبي</option>
    <option value="علمي">علمي</option>
  </select>
  <br>
  <button onclick="search()">عرض النتيجة</button>

  <script>
    function search() {
      const number = document.getElementById("number").value.trim();
      const branch = document.getElementById("branch").value;

      if (!number || !branch) {
        alert("يرجى إدخال رقم الاكتتاب واختيار الفرع");
        return;
      }

      const key = "student_" + number + "_" + branch + "_2025";
      const data = JSON.parse(localStorage.getItem(key));

      if (data) {
        localStorage.setItem("activeStudent", JSON.stringify(data));
        window.location.href = "result.html";
      } else {
        alert("❌ لا توجد نتيجة مطابقة");
      }
    }
  </script>
</body>
